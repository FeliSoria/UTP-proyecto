<div class="formlogin">
    <h1>Modificar novedades</h1>

    <form action="/admin/novedades/modificar" method="post">

        <div class="mb-3 row">
            <div class="col-sm-5">
                <input class="form-control" placeholder="Título" value="{{novedades.id}}" type="hidden" name="id">
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-sm-5">
                <input class="form-control" placeholder="Título" type="text" name="titulo" value="{{novedades.titulo}}">
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-sm-5">
                <textarea class="form-control" placeholder="Subtítulo" type="text" name="subtitulo">{{novedades.subtitulo}}"</textarea>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-sm-5">
                <textarea class="form-control" placeholder="Cuerpo" type="text" name="cuerpo">{{novedades.cuerpo}}"</textarea>
            </div>
        </div>


        <button type="submit" class="btn btn-primary">Modificar</button>
    </form>

    
</div>

</div>